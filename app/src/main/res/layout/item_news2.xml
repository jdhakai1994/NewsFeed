<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:paddingRight="16dp"
    android:baselineAligned="false">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        tools:src="@drawable/image" />

    <RelativeLayout
        android:id="@+id/textContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/sectionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary_text"
            android:textSize="16sp"
            tools:text="Football" />

        <TextView
            android:id="@+id/webTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/colorSecondary_text"
            android:textSize="14sp"
            android:layout_below="@+id/sectionName"
            tools:text="The Joy of Six: comedy football goals | Rob Smyth" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_below="@+id/webTitle"
            android:paddingRight="5dp"
            tools:text="2016-10-21" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/date"
            android:layout_below="@+id/webTitle"
            tools:text="09:12:01" />
    </RelativeLayout>

</RelativeLayout>